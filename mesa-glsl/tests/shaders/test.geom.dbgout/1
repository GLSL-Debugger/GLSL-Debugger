================== Source ==================
#version 330

layout(triangles) in;
layout(max_vertices = 3, triangle_strip) out;

varying out float dbgResult;

void  main()
{
  dbgResult = float(0.0);
  int i;
  vec4 vertex;
  dbgResult = float(1.0);
  for (i = 0; i < gl_in.length(); i++) {
    gl_Position = gl_in[i].gl_Position;
    EmitVertex();
  } 
  EndPrimitive();
}
